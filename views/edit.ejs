<%- include("partials/header"); -%>
<div class="container"style="margin-top: 55px;
border: 3px solid;
border-style: groove;
padding: 30px;">
    <h1 class="font-italic mb-3">Edit Article</h1>
    <div class="mb-3">
        <form action="/edit/<%= article._id %>" method="POST" >
          <label for="exampleFormControlTextarea1" class="form-label h3">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="<%= article.title %>" name="title" placeholder="title">
        </div>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label h3">Description</label> 
          <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="10" cols="143" placeholder="description" style="overflow:scroll;"><%= article.description %></textarea>
        </div>
        <div>
          <button type="submit" class="btn btn-large btn-primary">Edited</button>
        </div>
        </form>
</div>

<%- include("partials/footer"); -%>